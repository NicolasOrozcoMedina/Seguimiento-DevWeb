        }
        
        h1 {
            color: black;
            margin-bottom: 30px;
        }
        
        .score-container {
            display: flex;
            justify-content: space-around;
            width: 100%;
            max-width: 600px;
            margin-bottom: 30px;
        }
        
        .player {
            text-align: center;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 45%;
        }
        
        .player h2 {
            margin-top: 0;
            color: black;
        }
        
        .score {
            font-size: 72px;
            font-weight: bold;
            margin: 20px 0;
        }
        
        .buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }
        
        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: Green;
            color: white;
            transition: background-color 0.3s;
        }
        
        button:hover {
            background-color: darkgreen;
        }
        
        button:disabled {
            background-color: white;
            cursor: not-allowed;
        }
        
        .reset-btn {
            background-color: red;
        }
        
