<body>
    <h1>Ping Pong Score Keeper</h1>
    
    <div class="score-container">
        <div class="player" id="player1">
            <h2>Jugador 1</h2>
            <div class="score" id="score1">0</div>
            <button class="score-btn" id="btn1">+1 Punto</button>
        </div>
        
        <div class="player" id="player2">
            <h2>Jugador 2</h2>
            <div class="score" id="score2">0</div>
            <button class="score-btn" id="btn2">+1 Punto</button>
        </div>
    </div>
    
    <div class="buttons">
        <button class="reset-btn" id="resetBtn">Reiniciar Juego</button>
        <button class="options-btn" id="optionsBtn">Opciones</button>
    </div>
    
    <div class="options-container" id="optionsContainer">
        <p>Puntos para ganar:</p>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elementos del DOM
            const score1El = document.getElementById('score1');
            const score2El = document.getElementById('score2');
            const btn1 = document.getElementById('btn1');
            const btn2 = document.getElementById('btn2');
            const resetBtn = document.getElementById('resetBtn');
            const optionsBtn = document.getElementById('optionsBtn');
            const optionsContainer = document.getElementById('optionsContainer');
            const player1El = document.getElementById('player1');
            const player2El = document.getElementById('player2');
            
            // Variables del juego
            let score1 = 0;
            let score2 = 0;
            let winningScore = 11;
            let gameOver = false;
            
            // Generar botones de opciones de puntuacion
            const scoreOptions = [3, 4,  5, 6, 7, 8, 9, 10, 11];
            const optionsContainerEl = document.getElementById('optionsContainer');
            
            scoreOptions.forEach(option => {
                const btn = document.createElement('button');
                btn.className = 'winning-score-btn';
                if (option === winningScore) {
                    btn.classList.add('selected');
                }
                btn.textContent = option;
                btn.addEventListener('click', () => {
                    setWinningScore(option);
                });
                optionsContainerEl.appendChild(btn);
            });
            
            // Event listeners
            btn1.addEventListener('click', () => {
                updateScore(1);
            });
            
            btn2.addEventListener('click', () => {
                updateScore(2);
            });
            
            resetBtn.addEventListener('click', resetGame);
            
            optionsBtn.addEventListener('click', toggleOptions);
            
            // Funciones
            function updateScore(player) {
                if (gameOver) return;
                
                if (player === 1) {
                    score1++;
                    score1El.textContent = score1;
                } else {
                    score2++;
                    score2El.textContent = score2;
                }
                
                checkWinner();
            }
            
            function checkWinner() {
                if (score1 >= winningScore || score2 >= winningScore) {
                    gameOver = true;
                        
                    // Deshabilitar botones de puntuacion
                    btn1.disabled = true;
                    btn2.disabled = true;
                    
                    // Resaltar ganador y perdedor
                    if (score1 > score2) {
                        score1El.classList.add('winner');
                        score2El.classList.add('loser');
                    } else {
                        score2El.classList.add('winner');
                        score1El.classList.add('loser');
                    }
                }
            }
            
            function resetGame() {
                score1 = 0;
                score2 = 0;
                score1El.textContent = '0';
                score2El.textContent = '0';
                gameOver = false;
                
                // Habilitar botones de puntuacion
                btn1.disabled = false;
                btn2.disabled = false;
                
                // Quitar clases de color
                score1El.classList.remove('winner', 'loser');
                score2El.classList.remove('winner', 'loser');
            }
            
            function toggleOptions() {
                optionsContainer.style.display = optionsContainer.style.display === 'flex' ? 'none' : 'flex';
            }
            
            function setWinningScore(score) {
                winningScore = score;
                resetGame();
                
                // Actualizar boton seleccionado
                document.querySelectorAll('.winning-score-btn').forEach(btn => {
                    btn.classList.remove('selected');
                    if (parseInt(btn.textContent) === score) {
                        btn.classList.add('selected');
                    }
                });
            }
        });
    </script>
</body>
</html>
