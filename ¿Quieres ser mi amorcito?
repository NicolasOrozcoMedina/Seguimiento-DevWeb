<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>¿Quieres ser mi amorcito?</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #ffebee;
            text-align: center;
            transition: background-color 0.5s;
        }
        
        .message {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: #d81b60;
        }
        
        .buttons-container {
            position: relative;
            height: 100px;
            width: 300px;
        }
        
        button {
            padding: 10px 25px;
            font-size: 1.2rem;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            position: absolute;
            transition: transform 0.2s;
        }
        
        #no-btn {
            background-color: #f44336;
            color: white;
        }
        
        #si-btn {
            background-color: #4CAF50;
            color: white;
            display: none;
        }
        
        .final-message {
            font-size: 3rem;
            color: #d81b60;
            display: none;
            animation: pulse 1.5s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <div class="message" id="question">¿Quieres ser mi amorcito?</div>
    
    <div class="buttons-container">
        <button id="no-btn">No</button>
        <button id="si-btn">Sí</button>
    </div>
    
    <div class="final-message" id="final-message">TE AMO MIBIDA ❤️</div>
    
    <script>
        const noBtn = document.getElementById('no-btn');
        const siBtn = document.getElementById('si-btn');
        const question = document.getElementById('question');
        const finalMessage = document.getElementById('final-message');
        const buttonsContainer = document.querySelector('.buttons-container');
        
        // Función para mover el botón "No" a una posición aleatoria
        function moveNoButton() {
            const containerWidth = buttonsContainer.offsetWidth;
            const containerHeight = buttonsContainer.offsetHeight;
            const buttonWidth = noBtn.offsetWidth;
            const buttonHeight = noBtn.offsetHeight;
            
            // Calcular posición aleatoria dentro del contenedor
            const maxX = containerWidth - buttonWidth;
            const maxY = containerHeight - buttonHeight;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            noBtn.style.left = `${randomX}px`;
            noBtn.style.top = `${randomY}px`;
        }
        
        // Evento para el botón "No"
        noBtn.addEventListener('mouseover', function() {
            moveNoButton();
            
            // Mostrar el botón "Sí" en la posición original
            siBtn.style.display = 'block';
            siBtn.style.left = '50%';
            siBtn.style.top = '50%';
            siBtn.style.transform = 'translate(-50%, -50%)';
        });
        
        // Evento para el botón "Sí"
        siBtn.addEventListener('click', function() {
            // Ocultar todo y mostrar el mensaje final
            question.style.display = 'none';
            buttonsContainer.style.display = 'none';
            finalMessage.style.display = 'block';
            
            // Cambiar el fondo a un color romántico
            document.body.style.backgroundColor = '#fce4ec';
        });
        
        // Posicionar el botón "No" inicialmente en el centro
        noBtn.style.left = '50%';
        noBtn.style.top = '50%';
        noBtn.style.transform = 'translate(-50%, -50%)';
    </script>
</body>
</html>
