<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>¿Quieres ser mi amorcito?</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: lightpink;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .message {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: red;
        }
        
        .buttons-container {
            position: relative;
            height: 100px;
            width: 300px;
        }
        
        button {
            padding: 10px 25px;
            font-size: 1.2rem;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            position: absolute;
        }
        
        #no-btn {
            background-color: red;
            color: white;
        }
        
        #si-btn {
            background-color: green;
            color: white;
            display: none;
        }
        
        .final-message {
            font-size: 3rem;
            color: red;
            display: none;
        }
    </style>
</head>
<body>
    <div class="message" id="question">¿Quieres ser mi amorcito?</div>
    
    <div class="buttons-container">
        <button id="si-btn">Si</button>
    </div>
    
    <button id="no-btn">No</button>
    
    <div class="final-message" id="final-message">TE AMO MIBIDA</div>
    
    <script>
        const noBtn = document.getElementById('no-btn');
        const siBtn = document.getElementById('si-btn');
        const question = document.getElementById('question');
        const finalMessage = document.getElementById('final-message');
        const buttonsContainer = document.querySelector('.buttons-container');
        
        // Funcion para mover el boton "No" a una posicion aleatoria
        function moveNoButton() {
            const buttonWidth = noBtn.offsetWidth;
            const buttonHeight = noBtn.offsetHeight;
            
            // Calcular posicion aleatoria dentro del contenedor
            const maxX = window.innerWidth - buttonWidth;
            const maxY = window.innerHeight - buttonHeight;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            noBtn.style.left = `${randomX}px`;
            noBtn.style.top = `${randomY}px`;
            
            // Mostrar el boton "Si" en la posicion original
            siBtn.style.display = 'block';
            siBtn.style.left = '50%';
            siBtn.style.top = '50%';
            siBtn.style.transform = 'translate(-50%, -50%)';
        }
        
        // Evento para el boton "No"
        noBtn.addEventListener('click', function() {
            moveNoButton();
        });
        
        // Evento para el boton "Si"
        siBtn.addEventListener('click', function() {
            question.style.display = 'none';
            buttonsContainer.style.display = 'none';
            noBtn.style.display = 'none';
            finalMessage.style.display = 'block';
            
        });
        
        // Posicionar el boton "No" inicialmente en el centro
        noBtn.style.left = '50%';
        noBtn.style.top = '50%';
        noBtn.style.transform = 'translate(-50%, -50%)';
    </script>
</body>
</html>


